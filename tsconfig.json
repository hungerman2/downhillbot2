{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "ts-node": {
    "compilerOptions": {
      "skipLibCheck": true,
    },
    "swc": true,
  },
}